@model MVC.Budget.K_MYR.Models.SearchModel;

<form id="search-form">
    <div class="d-flex mb-3">
        <svg class="my-2 me-2" id="search-button" fill="#000000" version="1.1"
             width="45px" height="45px" viewBox="0 0 24 24">
            <path d="M11 6C13.7614 6 16 8.23858 16 11M16.6588 16.6549L21 21M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <input asp-for="SearchString" class="form-control w-100 my-2" id="transaction-search" type="text" />
    </div>
    <div id="filter-accordion" class="accordion mb-1">
        <div class="accordion-item">
            <div class="accordion-head">
                <h2 class="accordion-header me-auto">Filters</h2>
                <div class="accordion-caret rotate"></div>
            </div>
            <div id="collapseFilters" class="accordion-collapse collapse show" aria-labelledby="filterHeader">
                <div class="accordion-body">
                    <div class="form-group mb-1 inputs-container">
                        <div class="input-container">
                            <label id="category_search-label" class="me-2 d-block" for="CategoryId">Category</label>
                            <select class="category-select form-select" asp-for="CategoryId" asp-items="Model.Categories" aria-labelledby="category_search-label">
                                <option value="">All</option>
                            </select>
                        </div>
                        <div class="input-container">
                            <span class="me-1">From </span>
                            <input asp-for="MinDate" class="form-control" value="" aria-label="Transaction date range start" />
                        </div>
                        <div class="input-container">
                            <span class="me-1">To </span>
                            <input asp-for="MaxDate" class="form-control" value="" aria-label="Transaction date range end" />
                        </div>
                        <div class="input-container">
                            <span class="me-1">Amount From </span>
                            <input asp-for="MinAmount" class="form-control" value="" aria-label="Transaction date range start" />
                        </div>
                        <div class="input-container">
                            <span class="me-1">Amount To </span>
                            <input asp-for="MaxAmount" class="form-control" value="" aria-label="Transaction date range end" />
                        </div>
                        <div>
                            <span asp-validation-for="MinDate" class="text-danger"></span>
                            <span asp-validation-for="MaxDate" class="text-danger"></span>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            <span asp-validation-for="MinAmount" class="text-danger"></span>
                            <span asp-validation-for="MaxAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <input class="search-btn" type="submit" value="Filter" />
                </div>
            </div>
        </div>
    </div>
</form>