<div class="modal-header">
    <h5 class="modal-title">Delete Transaction</h5>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <img class="icon" src="~/img/cross.svg" />
    </button>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete this transaction? This process cannot be undone.</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary" id="btnDelete" data-url="@Url.Action("Delete", "Transactions")">Delete</button>
</div>
